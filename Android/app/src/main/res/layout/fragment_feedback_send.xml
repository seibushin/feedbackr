<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.antonborries.feedbacker.view.FeedbackSendFragment">


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonPositive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pill_shape"
        android:drawableLeft="@drawable/ic_thumb_up_white_24dp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_thumb_up_white_24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/feedback_positive"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/buttonNegative"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonNegative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pill_shape"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/feedback_negative"
        android:drawableLeft="@drawable/ic_thumb_down_white_24dp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_thumb_down_white_24dp"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPositive"/>
</android.support.constraint.ConstraintLayout>
